<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Tela_06_VisualizarSolicitacao">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBaixarContrato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtClienteSolicitacao"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:text="Cliente:"
                android:textColor="#FAFAFA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRetornoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMusicosServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Músicos:"
                android:textColor="#FAFAFA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRetornoMusicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtCustosServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custos:"
                android:textColor="#FAFAFA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRetornoCustos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Solicitação"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBaixarContrato"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#CCAB3A"
        android:text="Baixar contrato"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnLiberarServicoParaMusicos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLiberarServicoParaMusicos" />

    <Button
        android:id="@+id/btnLiberarServicoParaMusicos"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#CCAB3A"
        android:text="Liberar para aceitação dos músicos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>